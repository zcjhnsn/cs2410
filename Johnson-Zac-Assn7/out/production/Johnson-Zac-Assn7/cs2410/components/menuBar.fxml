<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.HBox?>

<HBox alignment="CENTER_RIGHT" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" spacing="10.0" xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cs2410.controller.MenuBarController">
   <children>
      <MenuBar fx:id="menuBar">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem fx:id="closeMenuItem" mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Settings">
            <items>
              <MenuItem fx:id="changeColorMenuItem" mnemonicParsing="false" text="Change Color" />
                  <MenuItem fx:id="changeModeMenuItem" mnemonicParsing="false" text="Choose Mode" />
                  <MenuItem mnemonicParsing="false" text="Other (?)" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem fx:id="aboutMenuItem" mnemonicParsing="false" text="About" />
                  <MenuItem fx:id="rulesMenuItem" mnemonicParsing="false" text="Rules" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <Button fx:id="startBtn" alignment="CENTER_RIGHT" contentDisplay="CENTER" mnemonicParsing="false" text="Start" />
      <ColorPicker fx:id="colorPicker" nodeOrientation="LEFT_TO_RIGHT" style="-fx-color-label-visible: false;" />
      <Label fx:id="highScoreLbl" alignment="CENTER_RIGHT" text="High Score:     " />
      <Label fx:id="currentScoreLbl" alignment="CENTER_RIGHT" text="Score:     " />
   </children>
